<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_dan"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:layout_marginTop="@dimen/_40px_in720p"
        android:background="@drawable/warm_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_20px_in720p"
            android:paddingRight="@dimen/_20px_in720p"
            android:paddingTop="@dimen/_16px_in720p"
            android:paddingBottom="@dimen/_16px_in720p"
            >

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="车厢："
                android:textColor="@color/black"
                android:textSize="@dimen/_30px_in720p" />

            <TextView
                android:id="@+id/trains"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv"
                android:text="03"
                android:textColor="@color/black"
                android:textSize="@dimen/_35px_in720p" />

            <TextView
                android:id="@+id/train_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_8px_in720p"
                android:layout_toLeftOf="@+id/img"
                android:text="查看详情"
                android:textColor="@color/lan_dan"
                android:textSize="@dimen/_28px_in720p" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/_14px_in720p"
                android:layout_height="@dimen/_17px_in720p"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/warm_index" />

        </RelativeLayout>

        <View
            android:background="@color/grey_dan"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2px_in720p"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_20px_in720p"
            android:paddingRight="@dimen/_20px_in720p"
            android:paddingTop="@dimen/_8px_in720p"
            android:paddingBottom="@dimen/_8px_in720p"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号："
                android:textColor="@color/grey"
                android:textSize="@dimen/_25px_in720p" />

            <TextView
                android:id="@+id/train_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YZ300003"
                android:textColor="@color/grey"
                android:textSize="@dimen/_25px_in720p" />

            <TextView
                android:layout_marginLeft="@dimen/_60px_in720p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="故障名称："
                android:textColor="@color/grey"
                android:textSize="@dimen/_25px_in720p" />

            <TextView
                android:id="@+id/train_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1号轴温过高"
                android:textColor="@color/grey"
                android:textSize="@dimen/_25px_in720p" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/isShow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40px_in720p" />

</LinearLayout>