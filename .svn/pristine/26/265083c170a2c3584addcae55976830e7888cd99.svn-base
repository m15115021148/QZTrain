<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_dan"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time"
            android:layout_width="@dimen/_320px_in720p"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20px_in720p"
            android:background="@drawable/history_item_time_bg"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/_5px_in720p"
            android:text="2013-12-23 21:23:22"
            android:textColor="@color/white"
            android:textSize="@dimen/_30px_in720p" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_20px_in720p"
            android:background="@drawable/history_bg"
            android:orientation="vertical">

            <include
                layout="@layout/include_comment_gaojing_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/look_desc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60px_in720p"
                android:layout_margin="@dimen/_20px_in720p"
                android:background="@drawable/deal_sure_bg"
                android:gravity="center"
                android:text="查看处理过程"
                android:textColor="@color/white"
                android:textSize="@dimen/_28px_in720p" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>