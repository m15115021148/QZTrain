<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/_170px_in720p"
        android:layout_height="@dimen/_136px_in720p"
        android:background="@drawable/power_supply_lv_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/_50px_in720p"
                android:layout_height="@dimen/_50px_in720p"
                android:src="@drawable/zhouwen_normal" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5px_in720p"
                android:text="轴温"
                android:textColor="@color/black"
                android:textSize="@dimen/_25px_in720p" />

        </LinearLayout>

        <TextView
            android:id="@+id/num"
            android:layout_width="@dimen/_30px_in720p"
            android:layout_height="@dimen/_30px_in720p"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_marginTop="@dimen/_10px_in720p"
            android:background="@drawable/qz_49"
            android:gravity="center"
            android:text="22"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_20px_in720p" />

    </RelativeLayout>

</LinearLayout>