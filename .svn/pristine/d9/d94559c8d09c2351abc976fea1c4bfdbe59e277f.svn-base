<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:background="@drawable/bg"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="3">
                <ImageView
                    android:layout_marginTop="@dimen/_80px_in720p"
                    android:layout_width="@dimen/_180px_in720p"
                    android:layout_height="@dimen/_180px_in720p"
                    android:src="@drawable/logo"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10px_in720p"
                    android:text="沈阳车辆段\n青藏客车安全监控系统"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_40px_in720p" />
                <TextView
                    android:id="@+id/app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v1.0.0"
                    android:layout_marginTop="@dimen/_30px_in720p"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_35px_in720p" />
            </LinearLayout>
        </LinearLayout>



    <com.sitemap.qingzangtrain.view.HorizontalProgressView
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_360px_in720p"></com.sitemap.qingzangtrain.view.HorizontalProgressView>
</RelativeLayout>
