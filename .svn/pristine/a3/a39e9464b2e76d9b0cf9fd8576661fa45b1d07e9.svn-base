<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_10px_in720p"
            android:layout_height="@dimen/_10px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:src="@drawable/d_10" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10px_in720p"
            android:maxLines="1"
            android:text="状态"
            android:textColor="@color/black"
            android:textSize="@dimen/_28px_in720p" />

    </LinearLayout>

</LinearLayout>