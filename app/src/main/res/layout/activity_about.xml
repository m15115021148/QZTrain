    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:background="@color/pop_txt_bg" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p">
        <TextView
            android:id="@+id/phoneimg"
            android:layout_width="@dimen/_36px_in720p"
            android:layout_height="@dimen/_36px_in720p"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:text=""
            android:background="@drawable/phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/phoneimg"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_26px_in720p"
            android:text="联系电话" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_24px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:textColor="#cccccc"
            android:text="XXX" />

    </RelativeLayout>

