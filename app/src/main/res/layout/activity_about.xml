    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pop_txt_bg">
        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:textSize="@dimen/_24px_in720p"
            android:layout_marginBottom="@dimen/_60px_in720p"
            android:textColor="#333333"
            android:text="v1.0.0" />
        <TextView
            android:id="@+id/pingtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_above="@+id/version"
            android:textSize="@dimen/_28px_in720p"
            android:layout_marginBottom="@dimen/_20px_in720p"
            android:textColor="#333333"
            android:text="青藏客车运行监控系统" />
