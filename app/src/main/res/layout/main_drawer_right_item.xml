<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="@dimen/_180px_in720p"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/img"
            android:layout_width="@dimen/_100px_in720p"
            android:layout_height="@dimen/_100px_in720p"
            android:src="@drawable/qz_25"
            />

        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="78"
            android:textColor="@color/white"
            android:textSize="@dimen/_36px_in720p" />

        <TextView
            android:layout_below="@+id/img"
            android:id="@+id/name"
            android:layout_marginTop="@dimen/_60px_in720p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="列车总数据"
            android:textColor="#333333"
            android:textSize="@dimen/_26px_in720p"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>



</LinearLayout>